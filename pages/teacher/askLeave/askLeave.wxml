<!--pages/student/askLeave/askLeave.wxml-->
<view class="cu-form-group margin-top">
    <view class="title">请假时间</view>
    <input placeholder="请输入请假时间"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">身份</view>
    <input placeholder="请输入你的身份"></input>
  </view>
  <view class="cu-form-group margin-top">
  <textarea data-placeholder="请输入请假原因" maxlength="-1" placeholder-class="placeholder" class="{{textareaValue?'value':''}}" bindinput="textareaInput"></textarea>
  </view>
  <view class="padding flex flex-direction margin-top">
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap='submit'>提交申请</button>
</view>
