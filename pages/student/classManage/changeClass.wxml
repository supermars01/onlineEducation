<!--pages/student/classManage/changeClass.wxml-->

<view class="cu-form-group margin-top">
    <view class="title">课程名称</view>
    <input placeholder="请输入课程名称"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">交换人姓名</view>
    <input placeholder="请输入对方的姓名"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">调课前时间</view>
    <input placeholder="请输入调课前时间"></input>
    
  </view>
  <view class="cu-form-group">
    <view class="title">调课后时间</view>
    <input placeholder="请输入调课后时间"></input>
    
  </view>
  <view class="cu-form-group margin-top">
  <textarea data-placeholder="请输入调课原因" maxlength="-1" placeholder-class="placeholder" class="{{textareaValue?'value':''}}" bindinput="textareaInput"></textarea>
  </view>
  <view class="padding flex flex-direction margin-top">
  <button class="cu-btn bg-red margin-tb-sm lg" bindtap='submit'>提交申请</button>
</view>
